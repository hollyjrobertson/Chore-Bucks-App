<% provide(:title, "Settings") %>
<div class="center jumbotron">
  <h1>Update your profile</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@chore) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :user_id %>
        <%= f.text_field :user_id, class: 'form-control', :readonly => true %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control' %>

        <%= f.label :isAvailable, "Confirmation" %>
        <%= f.text_field :isAvailable, class: 'form-control' %>

        <%= f.submit "Save changes", class: 'btn btn-primary', :readonly => true %>
      <% end %>
    </div>
  </div>
</div>